{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@domain/*": ["src/domain/*"],
      "@domain": ["src/domain"],
      "@persistance/*": ["src/persistance/*"],
      "@service/*": ["src/service/*"],
      "@service": ["src/service"],
      "@shared/*": ["src/shared/*"],
    }
  }
}
